{
  "$schema": "http://json-schema.org/draft-04/newshow/schema#",
  "title": "New Show",
  "description": "Validate a new show",
  "type": "object",
  "properties": {
    "showName": {
      "description": "Name of the show",
      "type": "string"
    },
    "showDate": {
      "description": "Date of the show",
      "type": "string"
    },
    "showCloseDate": {
      "description": "Date of closing show entries",
      "type": "string"
    },
    "showLocation": {
      "description": "Location of the show",
      "type": "string"
    },
    "showJudge": {
      "description": "Judge of the show",
      "type": "string"
    },
    "showType": {
      "type": "object",
      "properties": {
        "haltershow": {
          "type": "string"
        },
        "fleeceshow": {
          "type": "string"
        },
        "femaleprogencyshow": {
          "type": "string"
        },
        "maleprogencyshow": {
          "type": "string"
        }
      }
    }
  },
  "required": ["Showname", "ShowDate", "ShowCloseDate",  "ShowLocation", "ShowJudge" , "ShowType"]
}